@model IEnumerable<ShimizuConceptMVC.Models.ItemModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create New item</a>
        </div>
    </div>
    </br>
    
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Item Name
                </th>
                <th>
                    Borrower
                </th>
                <th>
                    Lender
                </th>
                <th>
                    Edit
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="23%">@item.ItemName</td>
                    <td width="23%">@item.Borrower</td>
                    <td width="23%">@item.Lender</td>
                    <td width="20%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Item" asp-action="UpdateView" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Item" asp-action="DeleteView" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }

</div>